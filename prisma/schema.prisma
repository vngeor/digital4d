// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// NextAuth required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// User model with role for admin access
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For email/password login
  role          Role      @default(USER)
  accounts      Account[]
  sessions      Session[]
  orders        Order[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

enum Role {
  USER
  ADMIN
}

// Order model for tracking customer requests
model Order {
  id            String      @id @default(cuid())
  userId        String?
  user          User?       @relation(fields: [userId], references: [id], onDelete: SetNull)
  customerName  String
  customerEmail String
  phone         String?
  description   String      @db.Text
  status        OrderStatus @default(PENDING)
  notes         String?     @db.Text
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

enum OrderStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

// MenuItem model for dynamic navigation
model MenuItem {
  id        String    @id @default(cuid())
  slug      String    @unique  // URL-friendly identifier (e.g., "services")
  titleBg   String
  titleEn   String
  titleEs   String
  order     Int       @default(0)
  published Boolean   @default(true)
  contents  Content[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([published])
  @@index([order])
}

// Content model for multilingual news/services
model Content {
  id         String    @id @default(cuid())
  type       String    // "news", "service"
  slug       String?   @unique  // URL-friendly identifier for content
  titleBg    String
  titleEn    String
  titleEs    String
  bodyBg     String?   @db.Text
  bodyEn     String?   @db.Text
  bodyEs     String?   @db.Text
  image      String?
  published  Boolean   @default(false)
  order      Int       @default(0)
  menuItemId String?
  menuItem   MenuItem? @relation(fields: [menuItemId], references: [id], onDelete: SetNull)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@index([type])
  @@index([published])
  @@index([menuItemId])
}
