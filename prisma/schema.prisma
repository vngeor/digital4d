// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// NextAuth required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// User model with role for admin access
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For email/password login
  phone         String?   // Required for orders, but can be added later
  country       String?
  city          String?
  address       String?   @db.Text  // Street address
  birthDate     DateTime?
  role          Role      @default(SUBSCRIBER)
  accounts      Account[]
  sessions      Session[]
  orders        Order[]
  createdContents  Content[]  @relation("ContentCreator")
  createdProducts  Product[]  @relation("ProductCreator")
  permissions      UserPermission[]
  auditLogs        AuditLog[]
  mediaFiles       MediaFile[]
  notifications    Notification[]
  couponsCreated   Coupon[]       @relation("CouponCreator")
  wishlistItems    WishlistItem[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

enum Role {
  ADMIN
  EDITOR
  AUTHOR
  SUBSCRIBER
}

// Order model for tracking customer requests
model Order {
  id            String      @id @default(cuid())
  orderNumber   String      @unique @default("")
  userId        String?
  user          User?       @relation(fields: [userId], references: [id], onDelete: SetNull)
  customerName  String
  customerEmail String
  phone         String?
  description   String      @db.Text
  status        OrderStatus @default(PENDING)
  notes         String?     @db.Text
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

enum OrderStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

// MenuItem model for dynamic navigation
model MenuItem {
  id        String    @id @default(cuid())
  slug      String    @unique  // URL-friendly identifier (e.g., "services")
  type      String    @default("general")  // Type for content categorization (e.g., "services", "products", "news", "landing")
  titleBg   String
  titleEn   String
  titleEs   String
  bodyBg    String?   @db.Text
  bodyEn    String?   @db.Text
  bodyEs    String?   @db.Text
  order     Int       @default(0)
  published Boolean   @default(true)
  contents  Content[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([published])
  @@index([order])
  @@index([type])
}

// ContentType model for managing content types
model ContentType {
  id        String    @id @default(cuid())
  slug      String    @unique  // e.g., "news", "service", "products"
  nameBg    String
  nameEn    String
  nameEs    String
  descBg    String?   @db.Text  // Rich text description for listing page
  descEn    String?   @db.Text
  descEs    String?   @db.Text
  color     String    @default("purple")  // Badge color: cyan, purple, emerald, amber, etc.
  order     Int       @default(0)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([order])
}

// Content model for multilingual news/services
model Content {
  id         String    @id @default(cuid())
  type       String    // "news", "service"
  slug       String?   @unique  // URL-friendly identifier for content
  titleBg    String
  titleEn    String
  titleEs    String
  bodyBg     String?   @db.Text
  bodyEn     String?   @db.Text
  bodyEs     String?   @db.Text
  image      String?
  published    Boolean   @default(false)
  order        Int       @default(0)
  menuItemId   String?
  menuItem     MenuItem? @relation(fields: [menuItemId], references: [id], onDelete: SetNull)
  createdById  String?
  createdBy    User?     @relation("ContentCreator", fields: [createdById], references: [id], onDelete: SetNull)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([type])
  @@index([published])
  @@index([menuItemId])
  @@index([createdById])
}

// Product model for e-commerce catalog
model Product {
  id          String    @id @default(cuid())
  slug        String    @unique
  sku         String?   @unique
  nameBg      String
  nameEn      String
  nameEs      String
  descBg      String?   @db.Text
  descEn      String?   @db.Text
  descEs      String?   @db.Text
  price       Decimal?  @db.Decimal(10, 2)
  salePrice   Decimal?  @db.Decimal(10, 2)
  onSale      Boolean   @default(false)
  currency    String    @default("EUR")
  priceType   String    @default("fixed")  // "fixed", "from", "quote"
  category    String
  tags        String[]
  image       String?
  gallery     String[]
  fileUrl     String?   // For digital products
  fileType    String?   // "digital", "physical", "service"
  featured    Boolean   @default(false)
  published     Boolean   @default(false)
  inStock       Boolean   @default(true)
  order         Int       @default(0)
  createdById   String?
  createdBy     User?     @relation("ProductCreator", fields: [createdById], references: [id], onDelete: SetNull)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  quotes        QuoteRequest[]
  wishlistItems WishlistItem[]

  @@index([category])
  @@index([published])
  @@index([featured])
  @@index([order])
  @@index([createdById])
}

// Product category model
model ProductCategory {
  id          String   @id @default(cuid())
  slug        String   @unique
  nameBg      String
  nameEn      String
  nameEs      String
  descBg      String?
  descEn      String?
  descEs      String?
  image       String?
  color       String   @default("emerald")
  order       Int      @default(0)

  @@index([order])
}

// Quote request model for custom services
model QuoteRequest {
  id            String   @id @default(cuid())
  quoteNumber   String   @unique @default("")
  productId     String?
  product       Product? @relation(fields: [productId], references: [id], onDelete: SetNull)
  name          String
  email         String
  phone         String?
  message       String?  @db.Text
  fileName      String?
  fileUrl       String?
  fileSize      Int?
  status        String   @default("pending")  // "pending", "quoted", "accepted", "rejected", "counter_offer", "user_declined"
  quotedPrice   Decimal? @db.Decimal(10, 2)
  adminNotes    String?  @db.Text
  userResponse  String?  @db.Text  // User's counter-offer or response message
  quotedAt      DateTime?  // When admin set status to "quoted"
  viewedAt      DateTime?  // When user viewed the quote response
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  messages      QuoteMessage[]

  @@index([status])
  @@index([email])
  @@index([productId])
}

// Quote message model for conversation history
model QuoteMessage {
  id            String   @id @default(cuid())
  quoteId       String
  quote         QuoteRequest @relation(fields: [quoteId], references: [id], onDelete: Cascade)
  senderType    String   // "user" or "admin"
  message       String   @db.Text
  quotedPrice   Decimal? @db.Decimal(10, 2)  // If this message includes a price offer
  createdAt     DateTime @default(now())

  @@index([quoteId])
}

// Digital purchase model for tracking downloads
model DigitalPurchase {
  id            String   @id @default(cuid())
  productId     String
  email         String
  downloadToken String   @unique
  downloadCount Int      @default(0)
  maxDownloads  Int      @default(3)
  expiresAt     DateTime
  stripeSession String?
  couponId      String?                   // If a coupon was used
  createdAt     DateTime @default(now())

  @@index([downloadToken])
  @@index([email])
}

// Banner model for homepage hero carousel, promo strip, and featured cards
model Banner {
  id          String   @id @default(cuid())
  type        String   // "hero" | "promo" | "card"
  titleBg     String
  titleEn     String
  titleEs     String
  subtitleBg  String?  @db.Text
  subtitleEn  String?  @db.Text
  subtitleEs  String?  @db.Text
  image       String?
  link        String?
  linkTextBg  String?
  linkTextEn  String?
  linkTextEs  String?
  published   Boolean  @default(false)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([type, published])
  @@index([order])
}

// Role permission overrides (DB overrides code defaults)
model RolePermission {
  id       String  @id @default(cuid())
  role     Role
  resource String  // "products", "categories", "content", "types", "banners", "menu", "orders", "quotes", "users", "roles"
  action   String  // "view", "create", "edit", "delete"
  allowed  Boolean @default(false)

  @@unique([role, resource, action])
  @@index([role])
}

// Audit log for tracking admin actions
model AuditLog {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  action      String   // "create" | "edit" | "delete"
  resource    String   // "products" | "content" | "orders" | etc.
  recordId    String
  recordTitle String?
  details     String?  @db.Text
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([resource])
  @@index([action])
  @@index([createdAt])
}

// Media file model for centralized media gallery
model MediaFile {
  id           String   @id @default(cuid())
  url          String   @unique
  filename     String
  altBg        String?
  altEn        String?
  altEs        String?
  mimeType     String
  size         Int                       // File size in bytes (compressed)
  width        Int?                      // Image width in pixels
  height       Int?                      // Image height in pixels
  uploadedById String?
  uploadedBy   User?    @relation(fields: [uploadedById], references: [id], onDelete: SetNull)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([uploadedById])
  @@index([mimeType])
  @@index([createdAt])
}

// Per-user permission overrides (overrides role-level permissions for specific users)
model UserPermission {
  id       String  @id @default(cuid())
  userId   String
  user     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  resource String  // same values as RolePermission
  action   String  // "view", "create", "edit", "delete"
  allowed  Boolean @default(false)

  @@unique([userId, resource, action])
  @@index([userId])
}

// Coupon / Discount code model
model Coupon {
  id            String    @id @default(cuid())
  code          String    @unique              // "SUMMER20", "WELCOME10"
  type          String                         // "percentage" | "fixed"
  value         Decimal   @db.Decimal(10, 2)   // 20 for 20%, 5.00 for â‚¬5 off
  currency      String?                        // Required for "fixed" type (EUR, BGN, USD)
  minPurchase   Decimal?  @db.Decimal(10, 2)   // Minimum purchase amount to use coupon
  maxUses       Int?                           // Total uses allowed (null = unlimited)
  usedCount     Int       @default(0)          // Current usage count
  perUserLimit  Int       @default(1)          // Max uses per email address
  productIds    String[]                       // Empty = all products, specific IDs = only those
  allowOnSale   Boolean   @default(false)      // Can this coupon be used on products already on sale?
  showOnProduct Boolean   @default(false)      // Show coupon banner on product pages
  active        Boolean   @default(true)
  startsAt      DateTime?                      // When coupon becomes valid
  expiresAt     DateTime?                      // When coupon expires
  createdById   String?
  createdBy     User?     @relation("CouponCreator", fields: [createdById], references: [id], onDelete: SetNull)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  usages        CouponUsage[]
  notifications Notification[]

  @@index([code])
  @@index([active])
  @@index([createdById])
}

// Coupon usage tracking
model CouponUsage {
  id             String   @id @default(cuid())
  couponId       String
  coupon         Coupon   @relation(fields: [couponId], references: [id], onDelete: Cascade)
  email          String
  originalPrice  Decimal  @db.Decimal(10, 2)
  discountAmount Decimal  @db.Decimal(10, 2)
  finalPrice     Decimal  @db.Decimal(10, 2)
  stripeSession  String?
  createdAt      DateTime @default(now())

  @@index([couponId])
  @@index([email])
}

// Notification model for in-app notifications
model Notification {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  type        String                    // "quote_offer" | "admin_message" | "coupon" | "wishlist_price_drop" | "wishlist_coupon"
  title       String
  message     String    @db.Text
  link        String?                   // Optional deep link URL
  couponId    String?
  coupon      Coupon?   @relation(fields: [couponId], references: [id], onDelete: SetNull)
  productId   String?                   // For wishlist notifications
  quoteId     String?                   // For quote_offer type
  read        Boolean   @default(false)
  readAt      DateTime?
  createdById String?                   // Admin who sent it
  scheduledAt DateTime?                 // null = immediate, future date = scheduled delivery
  createdAt   DateTime  @default(now())

  @@index([userId])
  @@index([read])
  @@index([createdAt])
  @@index([type])
  @@index([scheduledAt])
}

// Wishlist item linking User to Product
model WishlistItem {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, productId])
  @@index([userId])
  @@index([productId])
}

// Track wishlist notifications sent to prevent spam (24h cooldown)
model WishlistNotificationLog {
  id        String   @id @default(cuid())
  userId    String
  productId String
  type      String   // "price_drop" | "coupon"
  createdAt DateTime @default(now())

  @@index([userId, productId])
  @@index([createdAt])
}
